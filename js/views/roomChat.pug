doctype html
html
  head
    title Adrien Leteinturier - Write It Social
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    link(rel='stylesheet', href='../../foundation-icons/foundation-icons.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Raleway:400,600')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous')
    link(rel='stylesheet', href='../../style.css')
    link(rel='stylesheet', href='../../jsUiBase.css')
  body
    section#head
      nav.navbar.navbar-default.navbar-fixed-top.menu
        .container
          .navbar-header
            button.navbar-toggle.collapsed.in(type='button',data-toggle='collapse',data-target='#bs-example-navbar-collapse-1')
              span.sr-only|Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='index')
              img(src='../logo-navbar.png',alt='logo')  
          #bs-example-navbar-collapse-1.navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right.main-menu
              li.dropdown
                a(href='dash')|Home
              li.dropdown
                a(href='#')|À propos
              li.dropdown
                a(href='profil')|Profil
              li.dropdown
                a(href='#')|Chat
              li.dropdown
                a(href='#')|Mentions légales
            form.navbar-form.navbar-right.hidden-sm.form-search-bar
              .form-group
                i.icon.fi-magnifying-glass
                input.form-control.search-bar(type='text',name='search',placeholder='Recherche des amis') 
          .row.text-center
            #resultSearch
    .page-dashboard
      .container
        .row
          .col-md-3.static
            .profile-card
              img.profile-photo(src='../' + srcfile, alt='user')
              h5
                a.text-white(href='#')=pseudo
              a.text-white(href='#')
                i.fi-torsos-all-female(style='font-size: 16px;')=friends 
                  |  amis
            ul.nav-news-feed
              li
                i.icon.fi-page-multiple
                div
                  a(href='mydash')
                    | Mon flux 
              li
                i.icon.fi-torsos-all
                div
                  a(href='friends')
                    | Mes amis  
              li
                i.icon.fi-comments
                div
                  a(href='#')
                    | Messages   
              li
                i.icon.fi-photo
                div
                  a(href='#')
                    | Photos
            #chat-block
              div.title
                |Chat online
              ul.online-users.list-inline
                each divImgFriend in userFriend
                  li
                    a(href='#')
                      img.img-responsive.profile-photo(src='../' + divImgFriend.srcfile,title=divImgFriend.pseudo) 
          .col-md-7
            .create-post
              .row
                .col-md-7.col-sm-7
                  form#form-create-post.form-group(method='POST',action='/dash',enctype='multipart/form-data')
                    img.profile-photo-md(src='../' + srcfile,alt='profile photo md')
                    textarea#create-post-textarea.form-control(name='textPost',cols='30',rows='1',placeholder='Écrivez ce que vous souhaitez')
                    ul.publishing-tools.list-inline
                      li
                        .fileUpload
                          span.fi-photo
                          input#file.upload(type='file',name='file',multiple accept='image/*')
                .col-md-5.col-sm-5.col-xs-6
                  .tools
                    button.btn.btn-primary.pull-right.button-submit-post(type='submit')
                      |Publish
            .chat-room
              .row
                .col-md-4.overflowListPartChat
                  .nav.hote
                    img.profile-photo-sm.pull-left(src='../' + chat.srcfile, alt='Hote')
                    h3=chat.hote
                  #displaySessionListPart    
                    - for(var i = 0;i<chat.participants.length;i++)
                      .nav.listPartLive
                        img.profile-photo-sm.pull-left(src='../' + chat.participants[i].srcfile, alt=chat.participants[i].pseudo)
                        h3=chat.participants[i].pseudo
                .col-md-8.overflowListPartChat
                  #displaySessionListMess
                    - for(var j = 0;j<chat.messages.length;j++)
                      ul.chat-message
                        li.left
                          img.profile-photo-sm.pull-left(src='../' + chat.messages[j].srcfile , alt=chat.messages[j].pseudo)                
                          .chat-item
                            .chat-item-header
                              h5=chat.messages[j].pseudo
                              p=chat.messages[j].texte
              .row
                .col-md-12      
                  .send-message
                    form#form-create-message-chat.form-group(type='text' method='POST' action='/chat/' + chat._id)
                      input.form-control.input-message-chat(type='text' name='textMessageChat' placeholder='Ecris ton messages')
                      button.btn.btn-primary.pull-right.button-submit-message-chat(type='submit') Send                               
    section#footer
      #containerIndex
        .row
          #footer-wrapper
            .col-lg-4.col-md-4.col-sm-12.col-xs-12.text-center
              a(href='index',alt='Home')
                img#logoFooter(src='../logo-footer.png')
              ul.socialList
                li
                  a(href='#',alt='Facebook')
                    i.iconSocialFooter.fi-social-facebook
                li
                  a(href='#',alt='Twitter')
                    i.iconSocialFooter.fi-social-twitter
                li
                  a(href='#',alt='Github')
                    i.iconSocialFooter.fi-social-github
                li
                  a(href='#',alt='Linkedin')
                    i.iconSocialFooter.fi-social-linkedin  
            .col-lg-4.col-md-4.col-sm-12.col-xs-12.text-center
              ul.links-footer
                li
                  a(href='#',alt='À propos')|À propos
                li
                  a(href='#',alt='Mentions légales')|Mentions légales 
            .col-lg-4.col-md-4.col-sm-12.col-xs-12
              ul.contact-footer.text-center
                li
                  i.icon-contact.fi-mobile
                  p.phone| 06-18-33-96-13
                li
                  i.icon-contact.fi-mail
                  p.mail| adrienleteinturier@gmail.com
