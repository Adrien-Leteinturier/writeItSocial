doctype html
html
  head
    title Adrien Leteinturier - Write It Social
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1, user-scalable=no')
    link(rel='stylesheet', href='foundation-icons/foundation-icons.css')
    link(rel='stylesheet', href='https://fonts.googleapis.com/css?family=Raleway:400,600')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', integrity='sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u', crossorigin='anonymous')
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css', integrity='sha384-rHyoN1iRsVXV4nD0JutlnGaslCJuC7uwjduW9SVrLvRYooPp2bWYgmgJQIXwl/Sp', crossorigin='anonymous')
    link(rel='stylesheet', href='style.css')
    link(rel='stylesheet', href='jsUiBase.css')
  body
    section#head
      nav.navbar.navbar-default.navbar-fixed-top.menu
        .container
          .navbar-header
            button.navbar-toggle.collapsed.in(type='button',data-toggle='collapse',data-target='#bs-example-navbar-collapse-1')
              span.sr-only|Toggle navigation
              span.icon-bar
              span.icon-bar
              span.icon-bar
            a.navbar-brand(href='index')
              img(src='logo-navbar.png',alt='logo')  
          #bs-example-navbar-collapse-1.navbar-collapse.collapse
            ul.nav.navbar-nav.navbar-right.main-menu
              li.dropdown
                a(href='#')|Home
              li.dropdown
                a(href='#')|À propos
              li.dropdown
                a(href='#')|Profil
              li.dropdown
                a(href='#')|Chat
              li.dropdown
                a(href='#')|Mentions légales
            form.navbar-form.navbar-right.hidden-sm.form-search-bar
              .form-group
                i.icon.fi-magnifying-glass
                input.form-control.search-bar(type='text',name='search',placeholder='Recherche des amis') 
          .row.text-center
            #resultSearch
    .page-dashboard
      .container
        .row
          .col-md-3.static
            .profile-card
              img.profile-photo(src='/' + srcfile, alt='user')
              h5
                a.text-white(href='#')=pseudo
              a.text-white(href='#')
                i.fi-torsos-all-female(style='font-size: 16px;')=friends 
                  |  amis
            ul.nav-news-feed
              li
                i.icon.fi-page-multiple
                div
                  a(href='#')
                    | Mon flux 
              li
                i.icon.fi-torsos-all
                div
                  a(href='#')
                    | Mes amis  
              li
                i.icon.fi-comments
                div
                  a(href='#')
                    | Messages   
              li
                i.icon.fi-photo
                div
                  a(href='#')
                    | Photos
            #chat-block
              div.title
                |Chat online
              ul.online-users.list-inline
                each divImgFriend in scrFileFriend
                  li
                    a(href='#')
                      img.img-responsive.profile-photo(src=divImgFriend.srcfile,title=divImgFriend.pseudo) 
          .col-md-7
            .head-profil
            .row.no-margin
              .col-md-7.col-sm-7.content-profil
                form#formModifyProfil(method='POST',action='/profil')
                  ul
                    li
                      h3|Votre age
                      input#age(type='text',name='age', maxlength='2', value=age)
                    li
                      h3|Votre prenom
                      input#prenom(type='text',name='prenom',value=prenom)
                    li
                      h3|Votre nom
                      input#nom(type='text',name='nom',value=nom)
                    li
                      h3|Votre pseudo
                      input#pseudo(type='text',name='pseudo',value=pseudo)
                    li
                      h3|Votre mot de passe
                      input#password(type='password',name='password', value=password)
                    li
                      h3|Votre e-mail
                      input#email(type='email',name='email',value=email)
                    li
                      h3|Votre presentation
                      textarea#presentation(name='present', maxlenght='140',placeholder=presentation)
                  button.btn.btn-primary.button-modify-post(type='submit')
                    |Modifier
                  a.btn.btn-primary.pull-right.button-delete-user(href="/deleteProfil/" + userId,alt='delete post',title='Supprimer')
                    |Supprimer 
                  p|Avertissement : Si vous decidez de supprimer ou de modifier votre profil, cette action sera definitive.         
              .col-md-5.col-sm-5.photo-profil.no-padding
                img.img-responsive(src="/" + srcfile, alt="")
            .row.contentMessages.text-center.no-margin
              p| Mes messages                
            #parentDivMessageProfil
              each messProfil in userPublicMessages    
                .post-message-profil-friends
                    .row.no-margin.contentPostDisplayFriends
                        .col-md-4.col-sm-4.col-xs-4.text-center
                          img.img-profile-messages.imgPostDisplayFriends(src=messProfil.srcfile)
                          p=messProfil.pseudo
                        .texteMessages.col-md-8.col-sm-8.col-xs-8.texteMessages
                          a.deleteMess.fi-trash(data-id=messProfil._id)
                          p.mess=messProfil.texte
                          p.mess=messProfil.date 
      section#footer
          #containerIndex
            .row
              #footer-wrapper
                .col-lg-4.col-md-4.col-sm-12.col-xs-12.text-center
                  a(href='index',alt='Home')
                    img#logoFooter(src='logo-footer.png')
                  ul.socialList
                    li
                      a(href='#',alt='Facebook')
                        i.iconSocialFooter.fi-social-facebook
                    li
                      a(href='#',alt='Twitter')
                        i.iconSocialFooter.fi-social-twitter
                    li
                      a(href='#',alt='Github')
                        i.iconSocialFooter.fi-social-github
                    li
                      a(href='#',alt='Linkedin')
                        i.iconSocialFooter.fi-social-linkedin  
                .col-lg-4.col-md-4.col-sm-12.col-xs-12.text-center
                  ul.links-footer
                    li
                      a(href='#',alt='À propos')|À propos
                    li
                      a(href='#',alt='Mentions Légales')|Mentions légales 
                .col-lg-4.col-md-4.col-sm-12.col-xs-12
                  ul.contact-footer.text-center
                    li
                      i.icon-contact.fi-mobile
                      p.phone| 06-18-33-96-13
                    li
                      i.icon-contact.fi-mail
                      p.mail| adrienleteinturier@gmail.com                    
    script(src='https://code.jquery.com/jquery-3.1.1.min.js')
    script(src='http://code.jquery.com/ui/1.12.0/jquery-ui.min.js', integrity='sha256-eGE6blurk5sHj+rmkfsGYeKyZx3M4bG+ZlFyA7Kns7E=', crossorigin='anonymous')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js', integrity='sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa', crossorigin='anonymous')   
    script(type='text/javascript', src='socket.io.js')
    script(type='text/javascript', src='socketClient.js')
    script(type='text/javascript', src='jqueryBlog.js')



       